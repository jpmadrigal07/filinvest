{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"],
      "env": [
        "CMS_URL",
        "NODE_ENV",
        "CMS_SECRET",
        "MONGODB_URL",
        "PAYLOAD_SEED",
        "LAND_URL",
        "MANATAL_TOKEN",
        "GMAPS_TOKEN",
        "ZOHO_REFRESH_TOKEN",
        "ZOHO_CLIENT_ID",
        "ZOHO_CLIENT_SECRET",
        "ZOHO_REFRESH_TOKEN_URL",
        "ZOHO_LEADS_URL",
        "SENDGRID_API_KEY"
      ]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    }
  }
}
