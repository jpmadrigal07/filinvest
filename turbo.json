{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"],
      "env": [
        "CMS_API_URL",
        "NODE_ENV",
        "CMS_SECRET",
        "MONGODB_URL",
        "PAYLOAD_SEED",
        "WEB_URL"
      ]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    }
  }
}
