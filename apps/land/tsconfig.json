{
  "compilerOptions": {
    "paths": {
      "@/components/*": ["./components/*"],
      "@/helpers/*": ["./helpers/*"],
      "@/types/*": ["./types/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "extends": "tsconfig/nextjs.json",
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
